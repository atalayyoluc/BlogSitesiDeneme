@model UserUpdateDTO

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red "></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının Adını Giriniz  " aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Kullanıcı Soyadı</label>
                            <input asp-for="LastName" type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının Soyadını Giriniz  " aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Kullanıcı Email Adresi</label>
                            <input asp-for="Email" type="email" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının email adresini Giriniz  " aria-describedby="defaultFormControlHelp">

                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının Telefon Numarasını Giriniz  " aria-describedby="defaultFormControlHelp">

                        </div>

                        <div class="form-group">
                            <label asp-for="RoleId" id="defaultFormControlInput" class="form-label"></label>
                            <select asp-for="RoleId" class="form-control mb-2" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>

                        </div>

                 



                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    </div>
                </form>

            </div>
        </div>


    </div>

</div>






