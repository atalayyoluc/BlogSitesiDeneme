@model ArticleDTO

<div class="col-lg-8">

    <div class="blog-post">
        <div class="blog-thumb">
            <img src="~/images/@Model.Image.FileName" alt="">
        </div>
        <div class="down-content">
            <span>@Model.Category.Name</span>
                    <h1>@Model.Title</h1>
            <ul class="post-info">
                <li><a href="#">Makaleyi Yayımlamyan @Model.CreatedBy</a></li>
                <li><a href="#">Makale Yayım Tarihi @Model.CreatedDate</a></li>
                <li><a href="#">@Model.ViewCount kere görüntülendi</a></li>
            </ul>
            <p>
                @Model.Content
            </p>
            <div class="post-options">
                <div class="row">
                    <div class="col-6">
                        <ul class="post-tags">
                            <li><i class="fa fa-tags"></i></li>
                            <li><a href="#">Best Templates</a>,</li>
                            <li><a href="#">TemplateMo</a></li>
                        </ul>
                    </div>
                    <div class="col-6">
                        <ul class="post-share">
                            <li><i class="fa fa-share-alt"></i></li>
                            <li><a href="#">Facebook</a>,</li>
                            <li><a href="#"> Twitter</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>